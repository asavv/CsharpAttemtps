        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello" Height="144" Width="380">
    <Grid Margin="0,0,2,1">
        <Label Content="Please enter your name" Margin="41,10,0,0" VerticalAlignment="Top" Height="46" RenderTransformOrigin="0.928,1.207" FontSize="16" HorizontalAlignment="Left" Width="260"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="29" Margin="41,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="ok" Content="OK" Margin="247,63,0,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="71" Click="ok_Click"/>

    </Grid>
</Window>
